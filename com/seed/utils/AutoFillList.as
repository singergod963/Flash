		public static function fillAddress( ULocation : ComboBox, ULocation2 : ComboBox, withZipCode:Boolean = true ):void
		{
			Init();
			var city : String;
			ULocation.addItem( {label:"居住地區", data:""} );
			for (var i : int = 0; i < City.length; ++i)
			{
				city = City[i][0];
				City[city] = City[i][1];
				ULocation.addItem( {label:city, data:city} );
			}
			ULocation2.addItem( {label:"鄉鎮市", data:""} );
			ULocation.addEventListener( Event.CHANGE, function() : void
			{
				ULocation2.removeAll();
				ULocation2.addItem( {label:"鄉鎮市", data:""} );
				var city : String = ULocation.selectedItem.data;
				if (!city) return;
				for (var i : int = 0; i < City[city].length; ++i)
				{
					var area:String;
					(withZipCode)?area = City[city][i]:area = City[city][i].substr(3);
					ULocation2.addItem( { label:area, data:area } );
				}
			} );
		}

